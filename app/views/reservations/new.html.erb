<% if @reservation.restaurant %>
<h1> Make new reservation for <%= @reservation.restaurant.restaurant_name %>!</h1>
<% else %>
<h1> New Reservation!</h1>
<% end %>

<% if @reservation.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@reservation.errors.count, "error") %> prohibited this article from being saved:</h2>
 
    <ul>
    <% @reservation.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for([@reservation.restaurant, @reservation]) do |f|%>

<% if !@reservation.restaurant %>
  <%= f.label :restaurant %>
  <%= f.collection_select :restaurant_id, Restaurant.all, :id, :restaurant_name %>
<% else %>

    <%= f.hidden_field :restaurant_id %>
<% end %>

<br />
<div>
    <%= f.label :num_tables %>
    <%= f.text_field :num_tables %>
</div>

<br/>
<div>
    <%= f.label :checkin_date %>
    <%= f.text_field :checkin_date %>
</div>

<br/>

<%= f.submit %>

<% end %>



