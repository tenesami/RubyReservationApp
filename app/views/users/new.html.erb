<h1> Sign Up  </h1>

<%= form_for(@user, url: '/signup') do |f| %><!--b/c we specialy the url user can see the signup -->
<p>
    <%= f.label :username %>
    <%= f.text_field :username %>
</p>

<p>
    <%= f.label :email %>
    <%= f.email_field :email %> <!--the eamil_fild validate front end data -->
</p>
    <%= f.label :password %>
    <%= f.password_field :password %>
<p>
    <%= f.submit "Sign Up" %>
</p>
<% end %> 